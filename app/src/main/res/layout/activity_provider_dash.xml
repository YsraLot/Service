<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderDash">
    <TextView
        android:id="@+id/textAddCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Service"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textAddCategory"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <ImageView
            android:id="@+id/Image_category1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/b1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title1"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            />

        <ImageView
            android:id="@+id/Image_category2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/b3"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title2"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            />


        <ImageView
            android:id="@+id/Image_category3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/b3"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title3"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            />

    </LinearLayout>

</RelativeLayout>