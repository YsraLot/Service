<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderDash">
    <TextView
        android:id="@+id/textAddCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add New Service"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textColor="@color/galax"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/textAddCategory"
        >
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textAddCategory"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <ImageView
            android:id="@+id/Image_category1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/household"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="House hold services"
            android:textAlignment="center"
            android:textColor="@color/galax"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/Image_category2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/cleaning"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cleaning services"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/galax"
            android:textSize="24sp"
            />


        <ImageView
            android:id="@+id/Image_category3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/beauty"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Beauty services"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/galax"
            android:textSize="24sp"
            />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>